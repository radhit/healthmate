<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="subtitleTextColor">@color/textColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="AppTheme.NoActionBarPrimary" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="TextInputLayoutCustomPlain" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>
    <style name="ButtonCustom">
        <item name="android:background">@drawable/bg_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="ButtonOrange">
        <item name="android:background">@drawable/bg_secondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="fontFamily">@font/montserrat_font</item>
    </style>

    <style name="ToolbarColoredBackArrow">
        <item name="fontFamily">@font/montserrat_font</item>
        <item name="android:textColorSecondary">@color/textColor</item>
    </style>


</resources>