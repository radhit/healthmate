<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.mom.kia.view.MainKiaActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Ibu Hamil"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldNama"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor Induk KTP (NIK)"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldNomorKtp"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tempat Kelahiran"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldTempatLahir"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Lahir"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldTanggalLahir"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:focusable="false"
                            android:clickable="true"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hamil keberapa Mom?"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldHamilKeberapa"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Umur Anak Terakhir"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldUmurAnak"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pendidikan Terakhir"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldPendidikan"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pekerjaan"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldPekerjaanMom"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Agama"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldAgamaMom"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor JKN"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldNomorJkn"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Golongan Darah"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldGoldarMom"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="7dp"
                app:cardCornerRadius="4dp"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="15dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Data Suami"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldNamaSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tempat Kelahiran"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldTempatLahirSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Lahir"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldTanggalLahirSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nomor HP/Telp"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldNomorHpSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Agama"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldAgamaSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Golongan Darah"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldGoldarSuami"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alamat"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldAlamat"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kota/Kabupaten"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldKabupaten"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/TextInputLayoutCustom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kecamatan"
                        android:layout_marginTop="10dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fieldKecamatan"
                            android:layout_width="match_parent"
                            android:padding="10dp"
                            android:layout_height="50dp"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simpan"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"
                        android:id="@+id/btn_simpan"
                        android:background="@drawable/bg_secondary"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>