                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal harus kembali"
                    app:errorEnabled="true"
                    android:id="@+id/inputTanggal">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldTanggal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:clickable="true"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nasihat yang ingin disampaikan"
                    android:gravity="top"
                    app:errorEnabled="true"
                    android:id="@+id/inputNasihat">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldNasihat"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="100dp"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ButtonOrange"
                    android:layout_gravity="right"
                    android:id="@+id/btn_verif"
                    android:layout_margin="10dp"
                    android:text="Verifikasi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:id="@+id/ll_hospital">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_status"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        android:src="@color/md_yellow_700"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="RUJUKAN\nKE"
                        android:id="@+id/tv_lokasi_rujukan"
                        android:textSize="20sp"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pilih Lokasi Rujukan"
                    android:id="@+id/inputLokasi"
                    android:layout_marginTop="20dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldRujukan"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:clickable="true"
                        android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Simpan"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="false"
                    android:id="@+id/btn_simpan"
                    style="@style/ButtonOrange"
                    android:layout_gravity="right"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>