<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".menu.midwife.pasien.view.FormInputKala4Activity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:hint="Tanggal"
                    app:errorEnabled="true"
                    android:id="@+id/inputTanggal">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldTanggal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:focusable="false"
                        android:clickable="true"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Waktu"
                    app:errorEnabled="true"
                    android:id="@+id/inputWaktu">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldWaktu"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:focusable="false"
                        android:clickable="true"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Subjektif"
                android:textColor="@color/colorPrimary"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Isi Keluhan"
                app:errorEnabled="true"
                android:id="@+id/inputKeluhan">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldKeluhan"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Objektif"
                android:textColor="@color/colorPrimary"/>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kesadaran"
                app:errorEnabled="true"
                android:id="@+id/inputKesadaran">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldKesadaran"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="TD (mmHg)"
                    app:errorEnabled="true"
                    android:id="@+id/inputTd">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldTd"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Suhu (C)"
                    android:layout_marginLeft="10dp"
                    app:errorEnabled="true"
                    android:id="@+id/inputSuhu">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldSuhu"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nadi (x/mnt)"
                    app:errorEnabled="true"
                    android:id="@+id/inputNadi">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldNadi"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:hint="TFU (cm)"
                    app:errorEnabled="true"
                    android:id="@+id/inputTfu">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldTfu"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="RR (x/mnt)"
                    app:errorEnabled="true"
                    android:id="@+id/inputRR">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fieldRr"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="50dp"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kontrasi Uterus"
                app:errorEnabled="true"
                android:id="@+id/inputkontrasi">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldKontrasiUterus"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kandung Kemih"
                app:errorEnabled="true"
                android:id="@+id/inputKandung">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldKandungKemih"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="false"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pendarahan"
                app:errorEnabled="true"
                android:id="@+id/inputPendarahan">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldPendarahan"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Analisis"
                app:errorEnabled="true"
                android:id="@+id/inputAnalisis">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldAnalisis"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutCustom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Penatalaksaan"
                app:errorEnabled="true"
                android:id="@+id/inputPenatalaksaan">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fieldPenatalaksaan"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="50dp"
                    android:inputType="text"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                style="@style/ButtonOrange"
                android:text="Simpan"
                android:id="@+id/btn_simpan"
                android:textAllCaps="false"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>